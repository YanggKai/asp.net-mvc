@model TotalMVC.Models.Account
@{
    ViewBag.Title = "Login";
    Layout = null;
}
<link href="~/Content/diy.css" rel="stylesheet" />

@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
    <div class="form-horizontal inner">
        <div class="form-group">
            <div>
                <img src="~/Image/microsoft_logo.png" />
            </div>
            <div class="text-title row">
                登陆
            </div>
            <div class="col-md-10">
                @Html.TextBox("username", null, new { @class = "form-control btn-block",placeholder="电子邮箱、电话或skype" })
                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div>
        </div>
        <hr style="border:none" />
        <div class="form-group">
            <div>
                <input type="submit" value="Create" class="btn  btn-block btn-primary" />
            </div>
        </div>
    </div>
    <div style="background-color:white">
    </div>
}
